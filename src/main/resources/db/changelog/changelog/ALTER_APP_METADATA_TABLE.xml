<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="alter-app-metadata-table" author="johnchoi96">
        <addColumn tableName="WEBSERVICE_APP_METADATA">
            <column name="APP_NAME" type="VARCHAR(2048)"/>
            <column name="VIEW_PERMISSION" type="VARCHAR(50)"/>
        </addColumn>

        <rollback>
            <dropColumn tableName="WEBSERVICE_APP_METADATA" columnName="APP_NAME"/>
            <dropColumn tableName="WEBSERVICE_APP_METADATA" columnName="VIEW_PERMISSION"/>
        </rollback>
    </changeSet>

</databaseChangeLog>